<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<carbon.widget.ConstraintLayout
    app:carbon_cornerRadius="@dimen/radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/black"
    android:padding="@dimen/_padding">

    <View
        android:id="@+id/view_category"
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:id="@+id/tv_category"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_category"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view_category"
        app:layout_constraintLeft_toRightOf="@+id/view_category" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_category"
        app:layout_constraintBottom_toBottomOf="@+id/view_category"
        android:tint="@color/white"
        android:src="@drawable/ic_baseline_arrow_right_24" />
</carbon.widget.ConstraintLayout>
</layout>